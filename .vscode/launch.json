    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\C_part\\build\\bin\\tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\C_part\\build\\bin",
            "environment": [],
            "console": "internalConsole",
            "requireExactSource": false,
        },
        {
            "name": "(Windows) Launch one test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\C_part\\build\\bin\\tests.exe",
            "args": ["jpeg_dcd"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\C_part\\build\\bin",
            "environment": [],
            "console": "internalConsole",
            "requireExactSource": false
        },
        {
            "name": "(Linux) Launch test",
            "MIMode": "gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\C_part\\build\\bin\\tests",
            "args": ["jpeg_to_image"],
            "cwd": "${workspaceFolder}\\C_part\\build\\bin",
            "externalConsole": false,
            "internalConsoleOptions": "neverOpen",
            "symbolLoadInfo": {
                "loadAll": false,
                "exceptionList": ""
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch trampoline",
            "args": [],
            "program": "${workspaceFolder}/Rust_part/target/debug/trampoline.exe",
            "windows": {
                "program": "${workspaceFolder}/Rust_part/target/debug/trampoline.exe"
            },
            "cwd": "${workspaceFolder}/Rust_part",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]            
          },
    ]
}
